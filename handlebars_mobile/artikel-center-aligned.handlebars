<!DOCTYPE html>
<html lang="en">
	{{> head}}

<body>

	<!-- navpanel -->
	{{> navpanel}}

	<!-- searchpanel -->
	{{> searchpanel}}

	<!-- header -->
	{{> header}}
		
	<!-- root -->
	<div class="root">

		<!-- ads top -->
		{{> ads_top}}

		<div class="col-fluid">
			<div class="container clearfix">

				{{#withFirst read.people}}
				<!-- content -->
				{{> read_header align='center'}}
				{{> read_content align='center' polling=true}}
				{{/withFirst}}

			</div>
		</div>
		<div class="col-fluid">
			<div class="container clearfix">

				{{> title type='next' content="Read Next"}}
				<section class="feed feed-4 -more col-flex">
					{{> more index_start=0 index_end=4}}
				</section>

				{{> ads_square}}

				{{> title type='more' content="Fashion"}}
				<section class="feed feed-4 col-flex">
					{{> more index_start=4 index_end=12}}
				</section>

			</div>
		</div>
		
		<!-- footer -->
		{{> footer}}
		
	</div>

	<!-- ads horizontal -->
	{{> ads_horizontal}}

	{{> js}}
<script>
	if($('.poll-button').length>0){
		$('.poll-button').click(function(e){
			e.preventDefault();
			var pr = $(this).parent();
			pr.addClass('result');
			pr.find('.poll-button').each(function(){
				$(this).find('.poll-bar').animate({
					width: $(this).data('percent')+'%'
				});
				$(this).attr('disabled','disabled');
			});

		});
	}
</script>
	
</body>
</html>
